{
    "private": true,
    "workspaces": [
        "api",
        "api-models",
        "cli",
        "client",
        "models",
        "www",
        "components",
        "examples/third-party",
        "examples/trusted"
    ],
    "scripts": {
        "dev:www": "cd www; npm run dev",
        "dev:api": "cd api; npm run dev",
        "dev:example/third-party": "npm run dev --workspace=examples/third-party",
        "dev:example/trusted": "npm run dev --workspace=examples/trusted",
        "dev": "concurrently npm:dev:*"
    },
    "devDependencies": {
        "concurrently": "^6.2.1",
        "nodemon": "^2.0.12"
    }
}
